<div class="input-forms">
<form action="/transactions" method="POST" class="user-form">

<div class="field">
<label for="amount">Amount: </label>
<input type="number" id="amount" name="amount">
</div>

<div class="field">
<label for="purchase_date">Date: </label>
<input type="date" id="purchase_date" name="purchase_date">
</div>

<div class="field">
<label for="merchant-select">Where?:</label>
<select name="merchant_id" id="merchant-select">
<%for merchant in @merchants%>
<option value="<%=merchant.id%>"><%=merchant.name%></option>
<%end%>
</select>
</div>

<div class="field">
<label for="item-select">What?:</label>
<select name="item_id" id="item-select">
<%for item in @items%>
<option value="<%=item.id%>"><%=item.type%></option>
<%end%>
</select>
</div>

<input type="submit" value="Submit New">
</form>
</div>